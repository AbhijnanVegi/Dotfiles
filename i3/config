	bindsym s exec /opt/microsoft/msedge-dev/microsoft-edge-dev --profile-directory=Default --app-id=pjibgclleladliembfgfagdaldikeohf "--app-url=https://open.spotify.com/?utm_source=pwa_install" && i3 mode "default"
	bindsym t exec env BAMF_DESKTOP_FILE_HINT=/var/lib/snapd/desktop/applications/teams_teams.desktop /var/lib/snapd/snap/bin/teams %U && i3 mode "default"

	bindsym Escape mode "default"	
}

